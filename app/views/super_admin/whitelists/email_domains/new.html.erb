<%= render "layouts/form_errors", resource: @authorised_email_domain %>

<% content_for :page_title, "Approve a new email domain" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h2 class="govuk-heading-l">Allow a new email domain</h2>

    <%= form_for @authorised_email_domain, url: { action: :create } do |f| %>
      <%= f.label :name, "Name", class: "govuk-label" %>
      <%= f.text_field :name, class: "govuk-input govuk-input--width-10" %>

      <%= f.submit "Save", class: "govuk-button" %>
    <% end %>
  </div>
</div>
